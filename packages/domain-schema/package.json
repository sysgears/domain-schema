{
  "name": "domain-schema",
  "version": "0.0.11",
  "description": "A JavaScript Schema for Domain Driven Design",
  "repository": "https://github.com/sysgears/domain-schema.git",
  "author": "Victor Vlasenko <victor.vlasenko@sysgears.com>",
  "main": "lib/index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "tsc -p tsconfig.build.json",
    "watch": "tsc -p tsconfig.build.json -w",
    "lint": "tslint -p tsconfig.json --fix -c ../../tslint.json",
    "tests": "jest",
    "test": "yarn tests && yarn lint",
    "prepublishOnly": "yarn clean && yarn build"
  },
  "files": [
    "lib/*.js",
    "lib/*.d.ts",
    "lib/*.map"
  ],
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "@types/node": "^7.0.18",
    "jest": "^21.2.1",
    "prettier": "^1.6.1",
    "ts-jest": "^21.2.1",
    "tslint": "^5.2.0",
    "tslint-config-prettier": "^1.5.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.4.1"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "parser": "babylon"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/../../node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "dependencies": {
    "debug": "^3.1.0"
  }
}